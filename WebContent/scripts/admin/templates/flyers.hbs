<div id="center_wrapper">
    <button {{action 'newEntity'}}>{{SYSLang.New}}</button>
    <div id="search_box">
        {{input type="text" value=keyword size="20" action='typeSearch'}}
        <button id="search_button" {{action 'search'}}/>
    </div>

    <div id="search_box_navigation">
        <button id="page_previous_button" {{bind-attr disabled="hasNoPreviouse"}} {{action 'previousPage'}}>{{SYSLang.Previous}}</button>
        <span id="page_info">{{pagingInfo}}</span>
        <button id="page_next_button" {{bind-attr disabled="hasNoNext"}} {{action 'nextPage'}}>{{SYSLang.Next}}</button>
    </div>

    <div class="di">&nbsp;</div>

    <div id="flyer_list_panel">
        {{#each flyer in flyers}}
            <div class="s-flyer-item-panel" {{action 'editEntity' flyer}}>
                <div>{{module-icon 'flyer' 36}}&nbsp;{{flyer.createdDate}}<span style="float:right;">{{#if flyer.activated}}<img src="images/admin/icon-online.png" width="24px"/>{{else}}<img src="images/admin/icon-offline.png" width="24px"/>{{/if}}</span></div>
                <div><span>{{trimLength flyer.title 68}}</span></div>
                <div style="color:#676767;">{{#if flyer.refProducts}}{{flyer.refProducts.length}}{{else}}0{{/if}} {{SYSLang.Products}}</div>
                <div>{{featured-img flyer.featuredPic}}</div>
            </div>
        {{/each}}
    </div>

</div>