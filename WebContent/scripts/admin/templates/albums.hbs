<div id="center_wrapper">
    <button {{action 'newEntity'}}>{{SYSLang.New}}</button>
    <div id="search_box">
        {{input type="text" value=keyword size="20" action='typeSearch'}}
        <button id="search_button" {{action 'search'}}/>
    </div>

    <div id="search_box_navigation">
        <button id="page_previous_button" {{bind-attr disabled="hasNoPreviouse"}} {{action 'previousPage'}}>{{SYSLang.Previous}}</button>
        <span id="page_info">{{pagingInfo}}</span>
        <button id="page_next_button" {{bind-attr disabled="hasNoNext"}} {{action 'nextPage'}}>{{SYSLang.Next}}</button>
    </div>

    <div class="di">&nbsp;</div>

    <div id="album_list_panel">
        {{#each album in albums}}
            <div class="s-album-item-panel" {{action 'editEntity' album}}>
                <div>{{module-icon album.style 36}}&nbsp;{{album.createdDate}}<span style="float:right;">{{#if album.activated}}<img src="images/admin/icon-online.png" width="24px"/>{{else}}<img src="images/admin/icon-offline.png" width="24px"/>{{/if}}</span></div>
                <div><span>{{trimLength album.title 68}}</span></div>
                <div style="color:#676767;">{{#if album.attachments}}{{album.attachments.length}}{{else}}0{{/if}} {{SYSLang.Files}}</div>
                <div>{{featured-img album.featuredPic 185}}</div>
            </div>
        {{/each}}
    </div>

</div>